

  <% @ideas.each do |idea| %>
    <div class="panel panel-default">
      <div class="panel-body">
        <blockquote>
          <p><%= idea.description %></p>
          <small>by <%= idea.author %></small>
        </blockquote> 
        <br>

        <div class="btn-group" role="group">
          <%= link_to idea_path(idea) ,method: :delete ,class: 'btn btn-sm btn-danger',data: {confirm: "Are you sure?"} do %>
            <i class="fa fa-trash-o" aria-hidden="true"></i>
          <% end %>
          <%= link_to edit_idea_path(idea) ,class: 'btn btn-sm btn-success' do %>
            <i class="fa fa-pencil-square" aria-hidden="true"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  
<div class = "text-center">
  <%= will_paginate @ideas, class: 'apple_pagination' %>
</div>

